{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "target": "es6",
    "watch": true,
    "skipLibCheck": true,
    "outDir": "lib/",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "compileOnSave": true,
  "include": [
    "./src/**/*",
    "./test/**/*"
  ]
}